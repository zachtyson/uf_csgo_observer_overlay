{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "standard-with-typescript",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "react"
    ],
    "rules": {
        "@typescript-eslint/indent": ["error", 4],
        "semi": "off",
        "@typescript-eslint/semi": ["error", "always"],
        "no-console": "error"
    }
}
{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": ["standard-with-typescript", "prettier"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "project": "./tsconfig.json"
    },
    "plugins": ["prettier"],
    "rules": {
        "semi": "off",
        "@typescript-eslint/semi": ["error", "always"],
        "@typescript-eslint/indent": ["error", 4],
        "prettier/prettier": ["error", {
            "endOfLine": "auto"
        }]
    },

    "parser": "@typescript-eslint/parser"
}
